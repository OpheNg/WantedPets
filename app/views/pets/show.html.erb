
    <div class="pet-infos">
      <ul>
        <li><%= @pet.status %></li>
        <li><%= @pet.name %></li>
        <li><%= @pet.specie %></li>
        <li><%= @pet.breed %></li>
        <li><%= @pet.color %></li>
        <li><%= @pet.age %></li>
        <li><%= @pet.lost_address %></li>
        <li><%= @pet.owner %></li>
        <li><%= @pet.email %></li>
        <li><%= @pet.tel %></li>
        <li><%= @pet.description%></li>
      </ul>
